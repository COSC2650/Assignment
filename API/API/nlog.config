<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" autoReload="true" internalLogLevel="Info" internalLogFile="/var/log/nlog.log">

  <!-- enable asp.net core layout renderers -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
    <add assembly="NewRelic.LogEnrichers.NLog" />
  </extensions>

  <!-- the targets to write to -->
  <targets>
    <target xsi:type="AsyncWrapper" name="async">
      <target name="NewRelicLogFile" xsi:type="File" fileName="/var/log/apilog.json">
        <layout xsi:type="newrelic-jsonlayout">
        </layout>
      </target>
    </target>
  </targets>

  <!-- rules to map from logger name to target -->
  <rules>
    <logger name="*" minlevel="Trace" writeTo="async" />
  </rules>
</nlog>
