<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="HotChocolate.AspNetCore" Version="11.3.7" />
    <PackageReference Include="SonarAnalyzer.CSharp" Version="8.29.0.36737">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="NewRelic.Agent" Version="9.0.0" />
    <PackageReference Include="NewRelic.Agent.Api" Version="9.0.0" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="SonarAnalyzer.CSharp" />
    <None Remove="NewRelic.Agent" />
    <None Remove="NewRelic.Agent.Api" />
  </ItemGroup>
  
  <ItemGroup>
    <None Update="Procfile">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
</Project>
